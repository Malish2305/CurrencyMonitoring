@using Computershit.Core.Models
@model IEnumerable<Product>

@{
    ViewBag.Title = "Makar Pirdor";
    Layout = "_Layout";
}

<h2>Title</h2>

<!DOCTYPE html>
 
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Computershit</title>
</head>
<body>
     <p><a href="/Registration/Login"><input type="button" value=" Login "></a></p>
    <div>
        <h3>Магазинчик</h3>
        <table>
            <tr><td><p>Название продукта</p></td>
                <td><p>Производитель</p></td>
                <td><p>Модель</p></td><td></td>
                <td><p>Цена</p></td><td><td></td>
            </tr>
            @foreach (var b in Model)
            {
            <tr>
                <td><p>@b.ProductType</p></td>
                <td><p>@b.ProductBrand</p></td>
                <td><p><p>@Html.ActionLink(b.ProductSerialNumber, "ShowProduct", new {productId = b.ProductId})
</p>@b.ProductModel @b.ProductSerialNumber</p></td>
                <td><p>@b.Price</p></td>
                <td><p><a href="/Home/Buy/@b.ProductId">Купить</a></p></td>
            </tr>
            }
        </table>
    </div>
</body>
</html>